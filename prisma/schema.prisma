// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["windows", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Market {
  name    String   @unique

  // datarows  DataRow[]
}

model DataRow {
  time      Int

  // variabeles
  open    Float
  high    Float
  low     Float
  close   Float

  // corresponding market
  market_name   String
  // market        Market @relation(fields: [market_id], references: [name])

  @@id([time, market_name])
}
